{
  "groups": [
    {
      "name": "plugin",
      "type": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration"
    }
  ],
  "properties": [
    {
      "name": "plugin.enable",
      "type": "java.lang.Boolean",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "description": "是否启用插件功能",
      "defaultValue": true
    },
    {
      "name": "plugin.runMode",
      "type": "java.lang.String",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "description": "运行模式. 开发环境: dev; 生产/部署 环境: prod",
      "defaultValue": "dev"
    },
    {
      "name": "plugin.pluginPath",
      "type": "java.lang.String",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "description": "插件的路径. 开发环境下配置为插件模块上级目录; 生产环境下配置到插件jar包存放目录。建议配置绝对路径",
      "defaultValue": "~/plugins/"
    },
    {
      "name": "plugin.backupPath",
      "type": "java.lang.String",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "description": "卸载插件后, 备份插件的目录"
    },
    {
      "name": "plugin.basePackage",
      "type": "java.lang.String",
      "sourceType": "csdn.itsaysay.plugin.PluginAutoConfiguration",
      "description": "插件扫描包路径，使用统一包路径，默认:csdn.itsaysay.iot.plugin"
    }
  ]
}